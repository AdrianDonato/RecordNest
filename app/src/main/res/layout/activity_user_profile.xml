<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#e5e5e5">

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="USERNAME"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/profile_username"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10"
        android:layout_below="@id/profile_username">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/review_userImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/album1"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="104"
                android:background="@drawable/followers_text_con"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:layout_marginTop="10dp"
                android:textAlignment="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="104"
                android:background="@drawable/followers_text_con"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:layout_marginTop="10dp"
                android:textAlignment="center"/>


        </LinearLayout>
    </LinearLayout>



    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav"
        android:layout_marginBottom="60dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:elevation="10dp">

        <androidx.recyclerview.widget.RecyclerView                android:id="@+id/rv_collection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"/>

    </HorizontalScrollView>

    <View
        android:id="@+id/floor"
        app:layout_constraintBottom_toTopOf="@id/nav"
        android:layout_alignBottom="@id/nav"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2399BF"
        android:layout_above="@id/nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/nav"
        android:background="#E5E5E5"
        app:menu="@menu/menu_nav"
        app:itemIconTint="@drawable/nav_selector"
        app:itemTextColor="@drawable/nav_selector"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>