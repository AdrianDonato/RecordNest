<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <View
        android:background="@drawable/banner_hand"
        android:layout_width="15dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/rectangle_3"
        app:layout_constraintLeft_toLeftOf="@id/rectangle_3"
        android:layout_marginLeft="25dp"/>

    <View
        android:background="@drawable/banner_hand"
        android:layout_width="15dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/rectangle_3"
        app:layout_constraintRight_toRightOf="@id/rectangle_3"
        android:layout_marginRight="25dp"/>

    <View
        android:id="@+id/rectangle_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="201dp"
        android:layout_height="91dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:elevation="4dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH BY"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:elevation="4dp"/>

    <View
        app:layout_constraintBottom_toTopOf="@id/nav"
        android:layout_alignBottom="@id/nav"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2399BF" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/nav"
        android:background="#E5E5E5"
        app:menu="@menu/menu_nav"
        app:itemIconTint="@drawable/nav_selector"
        app:itemTextColor="@drawable/nav_selector"
        app:layout_constraintBottom_toBottomOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@id/nav"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vinyl"
                    android:elevation="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="400dp"
                    android:background="#FF7A17"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENRE"
                    android:layout_marginTop="200dp"
                    android:layout_centerHorizontal="true" />

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentBottom="true"/>

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vinyl"
                    android:elevation="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="400dp"
                    android:background="#FF7A17"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YEAR"
                    android:layout_marginTop="200dp"
                    android:layout_centerHorizontal="true" />

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentBottom="true"/>

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vinyl"
                    android:elevation="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="400dp"
                    android:background="#FF7A17"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARTIST"
                    android:layout_marginTop="200dp"
                    android:layout_centerHorizontal="true" />

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentBottom="true"/>

                <View
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shelf_row"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

        </LinearLayout>




    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>